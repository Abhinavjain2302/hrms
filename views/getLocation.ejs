                        <input type="number" name="noOfEmployee" placeholder="Number " style="width:200px;border:1px solid black;border-radius:5px;padding:10px;">&nbsp;&nbsp;
                        
                      
                        <input type="submit" value="submit" style="width:200px;border:1px solid black;border-radius:5px;padding:10px" id="submitbtn">
                      </form>     
                    </div>
                  </div>
                </div>
              </div>

