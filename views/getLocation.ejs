                  <th>Number Of Employee</th>
                  <th></th>
                </tr>
                <%for(var i=0;i<data.length;i++){%>
                <tr>
                  <td>data[i].name</td>
                  <td>data[i].city</td>
                  <td>data[i].contact</td>
                  <td>data[i].country</td>
                  <td>data[i].noOfEmployees</td>
                </tr>
                <%}%>
              </table><div>
